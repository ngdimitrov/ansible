server:
  http_listen_port: {{promtail_http_port}}
  grpc_listen_port: {{promtail_grcp_port}}

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://localhost:3100/loki/api/v1/push

scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: varlogs
      __path__: /var/log/*log
