server:
  http_listen_port: {{promtail_http_port}}

positions:
  filename: "{{promtail_data_dir}}"/positions.yaml

clients:
  - url: http://localhost:3100/loki/api/v1/push

scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: varlogs
      __path__: "{{promtail_log_file}}"
